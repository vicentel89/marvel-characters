{
  "plugins": [
    "postcss-flexbugs-fixes",
    [
      "postcss-preset-env",
      {
        "autoprefixer": {
          "flexbox": "no-2009"
        },
        "stage": 3,
        "features": {
          "custom-properties": false
        }
      }
    ],
    [
      "postcss-rem",
      {
        "name": "to-rem"
      }
    ],
    "postcss-nesting",
    [
      "@csstools/postcss-global-data",
      {
        "files": ["src/app/_styles/custom-media-queries.css"]
      }
    ],
    "postcss-custom-media"
  ]
}
